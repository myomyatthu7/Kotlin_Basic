<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#091026"
    tools:context=".BMIResult">
    <LinearLayout
        android:id="@+id/bmiOut"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:layout_width="348dp"
        android:orientation="vertical"
        android:background="#101950"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="54sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tvRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="12dp"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivLike"
        android:layout_width="248dp"
        android:layout_height="196dp"
        android:layout_below="@+id/bmiOut"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:background="@drawable/like"/>
    <ImageView
        android:id="@+id/ivDislike"
        android:layout_width="248dp"
        android:layout_height="196dp"
        android:layout_below="@+id/bmiOut"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:visibility="invisible"
        android:background="@drawable/dislike"/>

    <TextView
        android:id="@+id/tvCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivLike"
        android:layout_marginTop="26dp"
        android:gravity="center_horizontal"
        android:text="@string/likes_page"
        android:textSize="32sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/tvCount"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLike"
            android:layout_width="wrap_content"
            android:textSize="28sp"
            android:text="Like"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnUnlike"
            android:layout_width="wrap_content"
            android:textSize="28sp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="Unlike"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>