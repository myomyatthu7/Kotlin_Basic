<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnStop"
            style="@style/my_button"
            android:layout_centerInParent="true"
            android:text="@string/stop" />

        <Button
            android:id="@+id/btnAnotherActivity"
            style="@style/my_button"
            android:layout_above="@id/btnStop"
            android:layout_centerHorizontal="true"
            android:text="@string/anotherActivity" />

        <Button
            android:id="@+id/btnPhoneCall"
            style="@style/my_button"
            android:layout_below="@id/btnStop"
            android:layout_centerHorizontal="true"
            android:text="@string/phone_call" />

        <EditText
            android:id="@+id/etText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/btnAnotherActivity"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="number"
            android:autofillHints="Enter number" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>