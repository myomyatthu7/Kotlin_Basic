<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button">
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_width">360dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
    </style>
    <style name="calculator_btn">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/calculator_b1_bg</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="calculator_num">
        <item name="android:background">@drawable/calculator_b1_bg</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="text_cart">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">@color/black</item>
    </style>
</resources>