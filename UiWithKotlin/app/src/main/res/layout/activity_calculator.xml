<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#28384D"
    android:weightSum="12"
    android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
    tools:context=".Calculator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <EditText
            android:id="@+id/etCalculate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:hint="@string/calculate"
            android:inputType="numberDecimal" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="?attr/homeAsUpIndicator" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:layout_weight="9"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="5">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSin"
                    style="@style/calculator_btn"
                    android:text="sin" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCos"
                    style="@style/calculator_btn"
                    android:text="cos" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnTan"
                    style="@style/calculator_btn"
                    android:text="Tan" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnPi"
                    style="@style/calculator_btn"
                    android:text="π" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnNot"
                    style="@style/calculator_btn"
                    android:text="!" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnIn"
                    style="@style/calculator_btn"
                    android:text="In" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLog"
                    style="@style/calculator_btn"
                    android:text="Log" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnE"
                    style="@style/calculator_btn"
                    android:text="e" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnToThePower"
                    style="@style/calculator_btn"
                    android:text="^" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSqRoot"
                    style="@style/calculator_btn"
                    android:text="√" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="5">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn7"
                        style="@style/calculator_num"
                        android:text="7" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn8"
                        style="@style/calculator_num"
                        android:text="8" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn9"
                        style="@style/calculator_num"
                        android:text="9" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnF_Parentheses"
                        style="@style/calculator_num"
                        android:text="(" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnB_Parentheses"
                        style="@style/calculator_num"
                        android:text=")" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="5">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn4"
                        style="@style/calculator_num"
                        android:text="4" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn5"
                        style="@style/calculator_num"
                        android:text="5" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn6"
                        style="@style/calculator_num"
                        android:text="6" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnMuti"
                        style="@style/calculator_num"
                        android:text="×" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnDivi"
                        style="@style/calculator_num"
                        android:text="/" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn1"
                            style="@style/calculator_num"
                            android:text="1" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn2"
                            style="@style/calculator_num"
                            android:text="2" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn3"
                            style="@style/calculator_num"
                            android:text="3" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnMinus"
                            style="@style/calculator_num"
                            android:text="-" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn0"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="@drawable/calculator_b1_bg"
                            android:text="0"
                            android:textSize="32sp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/button13"
                            style="@style/calculator_num"
                            android:text="." />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/button14"
                            style="@style/calculator_num"
                            android:text="+" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnEqu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/calculator_b1_bg"
                        android:text="="
                        android:textSize="34sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>